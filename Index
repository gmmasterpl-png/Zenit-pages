<body>
  <div class="container">
    <h2 id="form-title">Logowanie</h2>
    <input type="text" id="username" placeholder="Nazwa uÅ¼ytkownika">
    <input type="password" id="password" placeholder="HasÅ‚o">
    <div id="extra-field" style="display: none;">
      <input type="email" id="email" placeholder="Email">
    </div>
    <button onclick="submitForm()">Zaloguj</button>
    <div class="toggle" onclick="toggleForm()">Nie masz konta? Zarejestruj siÄ™</div>
  </div>

  <script>
    let isLogin = true;

    function toggleForm() {
      isLogin = !isLogin;
      document.getElementById("form-title").innerText = isLogin ? "Logowanie" : "Rejestracja";
      document.querySelector("button").innerText = isLogin ? "Zaloguj" : "Zarejestruj";
      document.getElementById("extra-field").style.display = isLogin ? "none" : "block";
      document.querySelector(".toggle").innerText = isLogin 
        ? "Nie masz konta? Zarejestruj siÄ™" 
        : "Masz juÅ¼ konto? Zaloguj siÄ™";
    }

    function getUsers() {
      return JSON.parse(localStorage.getItem("users") || "[]");
    }

    function saveUsers(users) {
      localStorage.setItem("users", JSON.stringify(users));
    }

    function submitForm() {
      const username = document.getElementById("username").value.trim();
      const password = document.getElementById("password").value.trim();
      const email = document.getElementById("email")?.value.trim();

      if (!username || !password || (!isLogin && !email)) {
        alert("WypeÅ‚nij wszystkie pola!");
        return;
      }

      let users = getUsers();

      if (isLogin) {
        // LOGOWANIE
        let user = users.find(u => u.username === username && u.password === password);
        if (user) {
          localStorage.setItem("loggedUser", username); // zapamiÄ™taj kto jest zalogowany
          window.location.href = "home.html"; // przejÅ›cie do strony gÅ‚Ã³wnej
        } else {
          alert("BÅ‚Ä™dny login lub hasÅ‚o!");
        }
      } else {
        // REJESTRACJA
        let exists = users.some(u => u.username === username);
        if (exists) {
          alert("Taki uÅ¼ytkownik juÅ¼ istnieje!");
        } else {
          users.push({ username, password, email });
          saveUsers(users);
          alert("Rejestracja zakoÅ„czona sukcesem! ðŸŽ‰\nMoÅ¼esz siÄ™ zalogowaÄ‡.");
          toggleForm();
        }
      }
    }
  </script>
