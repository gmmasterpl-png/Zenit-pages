<body>
  <header>
    Witaj, <span id="user"></span>! üéâ
  </header>

  <nav>
    <a href="home.html">üìÖ Kalendarz</a>
    <a href="#">‚öôÔ∏è Ustawienia</a>
    <a href="index.html" onclick="logout()">üö™ Wyloguj</a>
  </nav>

  <div class="calendar">
    <div class="calendar-header">
      <button onclick="prevMonth()">‚óÄ</button>
      <h2 id="monthYear"></h2>
      <button onclick="nextMonth()">‚ñ∂</button>
    </div>
    <div class="days">
      <div>Pn</div><div>Wt</div><div>≈ör</div><div>Cz</div><div>Pt</div><div>Sb</div><div>Nd</div>
    </div>
    <div class="grid" id="calendarGrid"></div>
  </div>

  <!-- Modal dodawania / edycji wydarze≈Ñ -->
  <div class="modal" id="eventModal">
    <div class="modal-content">
      <h3 id="modalTitle">Dodaj wydarzenie</h3>
      <input type="text" id="eventTitle" placeholder="Tytu≈Ç">
      <textarea id="eventDesc" placeholder="Opis"></textarea>
      <button id="saveBtn" onclick="saveEvent()">Zapisz</button>
      <button onclick="closeModal()">Anuluj</button>
    </div>
  </div>

  <!-- Modal podglƒÖdu wydarzenia -->
  <div class="modal" id="viewModal">
    <div class="modal-content">
      <h3 id="viewTitle"></h3>
      <p id="viewDesc"></p>
      <p><small>Dodane przez: <span id="viewUser"></span></small></p>
      <button onclick="closeViewModal()">Zamknij</button>
      <div id="ownerActions" style="margin-top:10px;">
        <button onclick="editEvent()">‚úèÔ∏è Edytuj</button>
        <button class="danger" onclick="deleteEvent()">‚ùå Usu≈Ñ</button>
      </div>
    </div>
  </div>

  <script>
    const loggedUser = localStorage.getItem("loggedUser");
    if (!loggedUser) {
      window.location.href = "index.html";
    }
    document.getElementById("user").innerText = loggedUser;

    let currentDate = new Date();
    let selectedDate = null;
    let editingEventId = null;

    function getEvents() {
      return JSON.parse(localStorage.getItem("events") || "[]");
    }

    function saveEvents(events) {
      localStorage.setItem("events", JSON.stringify(events));
    }

    function renderCalendar() {
      const year = currentDate.getFullYear();
      const month = currentDate.getMonth();

      const firstDay = new Date(year, month, 1).getDay();
      const lastDate = new Date(year, month + 1, 0).getDate();

      const monthNames = ["Stycze≈Ñ","Luty","Marzec","Kwiecie≈Ñ","Maj","Czerwiec",
                          "Lipiec","Sierpie≈Ñ","Wrzesie≈Ñ","Pa≈∫dziernik","Listopad","Grudzie≈Ñ"];
      document.getElementById("monthYear").innerText = monthNames[month] + " " + year;

      const grid = document.getElementById("calendarGrid");
      grid.innerHTML = "";

      let startDay = firstDay === 0 ? 6 : firstDay - 1; // poniedzia≈Çek jako pierwszy dzie≈Ñ
      for (let i = 0; i < startDay; i++) {
        let empty = document.createElement("div");
        grid.appendChild(empty);
      }

      let events = getEvents();

      for (let d = 1; d <= lastDate; d++) {
        let cell = document.createElement("div");
        cell.className = "day";
        cell.innerHTML = `<div class="day-number">${d}</div>`;

        let fullDate = `${year}-${String(month+1).padStart(2,"0")}-${String(d).padStart(2,"0")}`;

        let dayEvents = events.filter(ev => ev.date === fullDate);
        dayEvents.forEach((ev) => {
          let div = document.createElement("span");
          div.className = "event";
          div.innerText = ev.title;
          div.onclick = (e) => {
            e.stopPropagation(); // ≈ºeby klikniƒôcie nie otwiera≈Ço "dodaj wydarzenie"
            openViewModal(ev);
          };
          cell.appendChild(div);
        });

        cell.onclick = () => openModal(fullDate);
        grid.appendChild(cell);
      }
    }

    function prevMonth() {
      currentDate.setMonth(currentDate.getMonth() - 1);
      renderCalendar();
    }

    function nextMonth() {
      currentDate.setMonth(currentDate.getMonth() + 1);
      renderCalendar();
    }

    function openModal(date) {
      selectedDate = date;
      editingEventId = null;
      document.getElementById("modalTitle").innerText = "Dodaj wydarzenie";
      document.getElementById("eventTitle").value = "";
      document.getElementById("eventDesc").value = "";
      document.getElementById("eventModal").style.display = "flex";
    }

    function closeModal() {
      document.getElementById("eventModal").style.display = "none";
    }

    function saveEvent() {
      const title = document.getElementById("eventTitle").value.trim();
      const desc = document.getElementById("eventDesc").value.trim();

      if (!title) {
        alert("Podaj tytu≈Ç wydarzenia!");
        return;
      }

      let events = getEvents();

      if (editingEventId !== null) {
        // edycja
        let ev = events.find(e => e.id === editingEventId);
        if (ev) {
          ev.title = title;
          ev.desc = desc;
        }
      } else {
        // nowe wydarzenie
        events.push({ 
          id: Date.now(), // unikalny identyfikator
          user: loggedUser, 
          title, 
          desc, 
          date: selectedDate 
        });
      }

      saveEvents(events);
      closeModal();
      renderCalendar();
    }

    function openViewModal(event) {
      selectedDate = event.date;
      editingEventId = event.id;
      document.getElementById("viewTitle").innerText = event.title;
      document.getElementById("viewDesc").innerText = event.desc || "(brak opisu)";
      document.getElementById("viewUser").innerText = event.user;

      // tylko autor widzi przyciski edycji/usuwania
      if (event.user === loggedUser) {
        document.getElementById("ownerActions").style.display = "block";
      } else {
        document.getElementById("ownerActions").style.display = "none";
      }

      document.getElementById("viewModal").style.display = "flex";
    }

    function closeViewModal() {
      document.getElementById("viewModal").style.display = "none";
    }

    function editEvent() {
      let events = getEvents();
      let ev = events.find(e => e.id === editingEventId);
      if (!ev) return;
      selectedDate = ev.date;
      document.getElementById("eventTitle").value = ev.title;
      document.getElementById("eventDesc").value = ev.desc;
      document.getElementById("modalTitle").innerText = "Edytuj wydarzenie";
      closeViewModal();
      document.getElementById("eventModal").style.display = "flex";
    }

    function deleteEvent() {
      if (confirm("Na pewno chcesz usunƒÖƒá to wydarzenie?")) {
        let events = getEvents();
        events = events.filter(e => e.id !== editingEventId); // usu≈Ñ po ID
        saveEvents(events);
        closeViewModal();
        renderCalendar();
      }
    }

    function logout() {
      localStorage.removeItem("loggedUser");
    }

    renderCalendar();
  </script>
</body>
</html>
